{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2017"],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "resolveJsonModule": true
  },
  "include": ["src/index.ts"],
  "exclude": ["node_modules"]
}
