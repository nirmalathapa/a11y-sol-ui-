{
  "name": "a11y-sol-design-system",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "storybook": "npm run storybook --workspace=packages/documentation",
    "build:components": "npm run build --workspace=packages/components",
    "build:documentation": "npm run build-storybook --workspace=packages/documentation"
  }
}
